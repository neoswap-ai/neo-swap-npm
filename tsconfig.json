{
    "compilerOptions": {
        "module": "ES6",
        "target": "ES5",
        "lib": ["ES2020", "DOM"],
        "declaration": true,
        "outDir": "./dist/lib/es6",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "esModuleInterop": true,
        // "allowJs": true,
        // "alwaysStrict": false
        // "checkJs": true,
        // "skipLibCheck": true
        "strictFunctionTypes": true
    },
    "include": ["src/**/*"]
}
